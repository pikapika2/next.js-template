{
  "name": "next.js-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less,sass,scss}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "eslint-config-prettier": "^8.5.0",
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@testing-library/react": "13.3.0",
    "@types/jest": "27.5.2",
    "@types/node": "^17.0.31",
    "@types/react": "18.0.10",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "lint-staged": "12.4.2",
    "prettier": "2.6.2",
    "stylelint": "14.8.5",
    "stylelint-config-recommended": "^7.0.0",
    "ts-jest": "27.1.5",
    "typescript": "4.7.3"
  }
}
